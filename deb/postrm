#!/bin/bash
set -e

case "$1" in
    purge)
        # Clean up log directory
        rm -rf /var/log/process-exporter 2>/dev/null || true

        # Clean up config directory
        rm -rf /etc/process-exporter 2>/dev/null || true
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
esac

#DEBHELPER#

exit 0